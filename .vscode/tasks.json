{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "typecheck file",
            "type": "shell",
            "command": "basedpyright ${file}"
        },
        {
            "label": "format file",
            "type": "shell",
            "command": "ruff format ${file}"
        },
        {
            "label": "lint file",
            "type": "shell",
            "command": "ruff check --fix ${file}"
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "just test"
        }
    ]
}
